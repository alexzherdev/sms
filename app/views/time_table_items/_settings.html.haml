.form-container.settings-form-container
  %br
  - form_tag :action => "update_settings" do
    %table
      %tr
        %td{ :width => 150 } Начало занятий
        %td
          = extjs_time_field_control :settings, :lessons_start, :value => Settings["lessons_start"].to_s(:lesson), :width => 60, :minValue => "07:30", :maxValue => "09:00", :increment => 5, :format => "H:i"
        %td

      %tr
        %td Длительность урока
        %td
          = extjs_text_field_control :settings, :lesson_length, :value => Settings["lesson_length"], :regex => "/^(\\d)+$/".j, :width => 60
        %td мин

      %tr
        %td Короткая перемена
        %td
          = extjs_text_field_control :settings, :short_break, :value => Settings["short_break"], :regex => "/^(\\d)+$/".j, :width => 60
        %td мин

      %tr
        %td Большая перемена
        %td
          = extjs_text_field_control :settings, :long_break, :value => Settings["long_break"], :regex => "/^(\\d)+$/".j, :width => 60
        %td мин

      %tr
        %td{ :height => 30, :valign => "center" }
          = extjs_button "Сохранить"
        %td
        %td