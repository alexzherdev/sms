.form-container.subject-form-container
  - remote_form_for @subject, :url => url, :method => method, :success => "Ext.MessageBox.alert('SMS', 'Данные предмета сохранены.');", :failure => "Ext.MessageBox.show({ title: 'SMS', msg: 'Введите корректные данные.', icon: Ext.MessageBox.ERROR, buttons: Ext.MessageBox.OK });", :html => { :id => "subject_form" } do |f|
    %table
      - if @subject.new_record?
        %tr
          %td= f.label :year, "Год обучения"
          %td= extjs_combo_box_control :subject, :year, :width => 80, :store => "Global.school_year_store".j, :displayField => "year", :valueField => "year"
      
      %tr
        %td= f.label :name, "Название"
        %td= extjs_text_field_control :subject, :name

      %tr
        %td= f.label :hours_per_week, "Количество часов в неделю"
        %td= extjs_text_field_control :subject, :hours_per_week

    = extjs_button "Сохранить"
    